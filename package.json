{
  "name": "subscription-platform-backend",
  "version": "1.0.0",
  "description": "Backend API server for subscription upgrade platform",
  "main": "dist/server.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "nodemon --exec \"ts-node --transpile-only src/server.ts\"",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky"
  },
  "keywords": [
    "fastify",
    "typescript",
    "subscription",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/env": "^5.0.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.0.0",
    "@supabase/supabase-js": "^2.57.4",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.1",
    "fastify-raw-body": "^5.0.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.12",
    "pg": "^8.11.3",
    "pino-pretty": "^13.1.1",
    "stripe": "^16.12.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "jest": "^30.1.3",
    "lint-staged": "^16.2.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "test-exclude": "^7.0.1",
    "glob": "^9.0.0",
    "inflight": "npm:@tootallnate/once@^3.0.0"
  }
}
